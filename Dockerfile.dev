FROM php:8.2-apache

# Установка системных зависимостей
RUN apt-get update && apt-get install -y \
    libzip-dev \
    zip \
    unzip \
    && docker-php-ext-install pdo pdo_mysql zip opcache \
    && rm -rf /var/lib/apt/lists/*

# Включаем Apache модули
RUN a2enmod rewrite headers deflate expires

# Копируем конфигурацию Apache
COPY docker/apache/000-default.conf /etc/apache2/sites-available/000-default.conf
COPY docker/apache/compression.conf /etc/apache2/conf-available/compression.conf
RUN a2enconf compression

# Настройка PHP для разработки
RUN mv "$PHP_INI_DIR/php.ini-development" "$PHP_INI_DIR/php.ini"

# Настройка OPcache для development (с частой ревалидацией)
RUN echo "opcache.enable=1" >> /usr/local/etc/php/conf.d/opcache.ini \
    && echo "opcache.revalidate_freq=0" >> /usr/local/etc/php/conf.d/opcache.ini \
    && echo "opcache.validate_timestamps=1" >> /usr/local/etc/php/conf.d/opcache.ini

# Установка Composer
COPY --from=composer:latest /usr/bin/composer /usr/bin/composer

WORKDIR /var/www/html

# Копируем composer файлы для установки зависимостей
COPY src/composer.json src/composer.lock* ./

# Устанавливаем зависимости
RUN composer install --no-dev --optimize-autoloader || true

RUN chown -R www-data:www-data /var/www/html

# Скрипт для установки зависимостей при старте (если их нет)
RUN echo '#!/bin/bash\nif [ ! -d "vendor" ]; then composer install --no-dev --optimize-autoloader; fi\napache2-foreground' > /usr/local/bin/start.sh && chmod +x /usr/local/bin/start.sh

CMD ["/usr/local/bin/start.sh"]
